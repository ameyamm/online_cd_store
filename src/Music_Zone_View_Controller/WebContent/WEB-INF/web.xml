<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>Music Zone</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
    <welcome-file>Home.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>MainServlet</servlet-name>
    <servlet-class>com.vaham.controller.MainServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>PaymentHandler</servlet-name>
    <servlet-class>com.dummy.thirdpartypayment.PaymentHandler</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>MainServlet</servlet-name>
    <url-pattern>/register</url-pattern>
    <url-pattern>/login</url-pattern>
    <url-pattern>/logout</url-pattern>
    <url-pattern>/order</url-pattern>
    <url-pattern>/products</url-pattern>
    <url-pattern>/categories</url-pattern>
    <url-pattern>/productinfo</url-pattern>
    <url-pattern>/addToCart</url-pattern>
    <url-pattern>/removeFromCart</url-pattern>
    <url-pattern>/viewCart</url-pattern>
    <url-pattern>/account</url-pattern>
    <url-pattern>/orderCheckout</url-pattern>
    <url-pattern>/paymentManager</url-pattern>
    <url-pattern>/orderStatus</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>PaymentHandler</servlet-name>
  	<url-pattern>/paymentHandler</url-pattern>
  	<url-pattern>/authPayment</url-pattern>
  </servlet-mapping>
</web-app>